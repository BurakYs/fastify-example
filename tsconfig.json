{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext"],
        "baseUrl": ".",
        "types": ["node"],
        "typeRoots": ["node_modules/@types", "src/types"],
        "paths": {
            "@/*": ["src/*"],
            "@/tests/*": ["tests/*"]
        }
    }
}
